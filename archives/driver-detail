    <script>
        const supabase = window.supabase.createClient(DJUNTA_CONFIG.supabaseUrl, DJUNTA_CONFIG.supabaseKey);
        const params = new URLSearchParams(window.location.search);
        const driverId = params.get('id');
        let currentDriver = null;

        async function initDriver() {
            if (!driverId) return window.location.href = 'search-driver.html';

            // On récupère les infos depuis la table 'vehicles' (car c'est là qu'on stocke les chauffeurs pour l'instant)
            const { data: driver, error } = await supabase
                .from('vehicles')
                .select('*')
                .eq('id', driverId)
                .single();

            if (error || !driver) {
                alert("Profil introuvable");
                return window.location.href = 'search-driver.html';
            }

            currentDriver = driver;

            // Remplissage UI
            // Astuce : Brand = Prénom, Model = Nom
            document.getElementById('driver-name').innerText = `${driver.brand} ${driver.model}`;
            document.getElementById('driver-loc').innerText = driver.location;
            document.getElementById('driver-price').innerText = `${driver.price_per_day.toLocaleString()} CVE`;
            
            // Image ou Placeholder
            const initials = (driver.brand[0] + (driver.model[0] || '')).toUpperCase();
            if (driver.image_url) {
                document.getElementById('driver-img').src = driver.image_url;
            } else {
                document.getElementById('driver-img').src = `https://ui-avatars.com/api/?name=${initials}&background=22c55e&color=fff&size=200`;
            }

            lucide.createIcons();
        }

        function bookDriver() {
            // On redirige vers le checkout existant, ça marche car le checkout prend un ID et un Prix
            window.location.href = `checkout.html?id=${driverId}`;
        }

        document.addEventListener('DOMContentLoaded', initDriver);
    </script>
